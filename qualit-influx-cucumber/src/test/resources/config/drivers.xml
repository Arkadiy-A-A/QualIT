<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true"
       default-autowire="byName">

    <bean id="chromeDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="defaultDriver" value="true"/>
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selemium.driver.SeleniumDriverFactory">
                <constructor-arg ref="chromeDriverConfiguration"/>
            </bean>
        </property>
    </bean>

    <bean id="chromeDriverConfiguration"
          class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
        <property name="driverPath" value="drivers\chromedriver.exe"/>
        <property name="implicitlyWait" value="30"/>
        <property name="maximizeWindow" value="true"/>
        <property name="driverType">
            <value type="WebSupportedDriver">CHROME</value>
        </property>
    </bean>

    <bean id="firefoxDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="defaultDriver" value="true"/>
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selemium.driver.SeleniumDriverFactory">
                <constructor-arg ref="firefoxDriverConfiguration"/>
            </bean>
        </property>
    </bean>

    <bean id="firefoxDriverConfiguration"
          class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
        <property name="driverPath" value="drivers\geckodriver.v026.0.x64.exe"/>
        <property name="implicitlyWait" value="30"/>
        <property name="maximizeWindow" value="true"/>
        <property name="driverType">
            <value type="WebSupportedDriver">FIREFOX</value>
        </property>
    </bean>

</beans>