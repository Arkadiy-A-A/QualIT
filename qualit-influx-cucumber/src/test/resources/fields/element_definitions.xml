<?xml version="1.0" encoding="UTF-8"?>
<Pages xmlns="http://qualit.ibs-qa.ru/schema/web-elements">

    <Page name="Стартовая страница Яндекс">

        <TextInput name="Поиск" isLoaded="true" locator="//*[@aria-label='Запрос']"/>
        <Button name="Найти" locator="//button[.//text()='Найти']"/>

        <Button name="Найти (несуществующий)" locator="//button[.//text()='НеНайти']"/>

        <Collection name="Сейчас в СМИ" locator="//div[@id='news_panel_news']/div/ol[not(contains(@class,'animation'))]/li">
            <StaticText name="Текст новости" locator="./a[contains(@class,'#{class}')]"/>
        </Collection>

        <Page name="Результаты поиска">
            <StaticText name="Результат поиска" isLoaded="true" locator="//ul[@id='search-result']"/>
<!--            <TextBox name="Результат поиска" locator="//*[@class='entity-search__header']/*[contains(@class, 'entity-search__title')]"/>-->
        </Page>

    </Page>

</Pages>
