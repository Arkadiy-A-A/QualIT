<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true"
       default-autowire="byName">

    <bean id="chromeDriverConfiguration"
          class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
        <property name="driverPath" value="src\test\resources\drivers\chromedriver.exe"/>
        <property name="implicitlyWait" value="10"/>
        <property name="maximizeWindow" value="true"/>
        <property name="driverType">
            <value type="WebSupportedDriver">CHROME</value>
        </property>
        <property name="applicationUrl" value="http://iframe.free.nanoquant.ru/index.html"/>
        <property name="connectToRunningApp" value="false"/>
        <property name="closeDriverAfterTest" value="true"/>
    </bean>

    <bean id="chromeDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="defaultDriver" value="false"/>
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selemium.driver.SeleniumDriverFactory">
                <constructor-arg ref="chromeDriverConfiguration"/>
            </bean>
        </property>
    </bean>

    <bean id="ieDriverConfiguration"
          class="ru.ibsqa.qualit.selenium.driver.configuration.DefaultDriverConfiguration">
        <property name="driverPath" value="src\test\resources\drivers\IEDriverServer.exe"/>
        <property name="implicitlyWait" value="10"/>
        <property name="maximizeWindow" value="true"/>
        <property name="driverType">
            <value type="WebSupportedDriver">IE</value>
        </property>
        <property name="applicationUrl" value="http://iframe.free.nanoquant.ru/index.html"/>
        <property name="connectToRunningApp" value="false"/>
        <property name="closeDriverAfterTest" value="true"/>
    </bean>

    <bean id="ieDriver" class="ru.ibsqa.qualit.selenium.driver.WebDriverFacade" destroy-method="quit">
        <property name="defaultDriver" value="true"/>
        <property name="driverFactory">
            <bean class="ru.ibsqa.qualit.selemium.driver.SeleniumDriverFactory">
                <constructor-arg ref="ieDriverConfiguration"/>
            </bean>
        </property>
    </bean>

</beans>