<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation = "
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true">

    <context:component-scan base-package="ru.ibsqa.qualit,impls,pages">
        <context:exclude-filter type="regex" expression="ru.ibsqa.qualit.*.*SearchStrategy"/>
    </context:component-scan>

    <bean class="ru.ibsqa.qualit.configuration.suite.SuiteConfigFileImpl">
        <property name="suite" value="**\Example1.story,**\Yandex.story,**\Flow.story"/>
    </bean>
    <import resource="config/drivers.xml"/>
    <import resource="config/repositories.xml"/>
</beans>